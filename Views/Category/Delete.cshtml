@model WebApplication17.Models.Category

@{
    ViewData["Title"] = "Create";
}



<h4>Delete Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @*<div asp-validation-summary="All"></div>*@
        <form asp-action="DeletePOST" method="post">
            <input asp-for="Id" hidden/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger mx-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


